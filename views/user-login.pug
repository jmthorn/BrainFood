include utils.pug

html
  head
      block head
        title="BrainFood"
        link(rel='stylesheet' href='/stylesheets/user.css')
        link(rel='stylesheet' href='/stylesheets/global.css')
        script(src="https://kit.fontawesome.com/a229c5b13d.js" crossorigin="anonymous")
        link(rel='stylesheet' href='/stylesheets/footer.css')
  body
    div(class="signup-login-background-image-container")
      div(class="signup-login-background")
        form(action='/users/login' method='post')
          +fieldHidden('username', 'Demo')
          +fieldHidden('password', 'jJ123!')
          input(type="hidden" name="_csrf" value=csrfToken)
          div(class="demo-div")
            button(type='submit' class='btn demo-button') Demo User
        div(class="user-content-container")
          div(class="img-container")
            img(src="/images/Brain_Logo_large.png" alt="No image" width="200px")
          div(class="form-container")
            h1(class="form-header") Log In
            div.errors
              +validationErrorSummary(errors)
            form(action="/users/login" method="post" class="user-form")
              input(type="hidden" name="_csrf" value=csrfToken)
              +field("Username", "username", username)
              +field("Password", "password", null, "password")
              div(class = "submit-div")
                button(type="submit", class='btn submit') Login
                a(href="/users/login" class="a clear") Clear
            div(class="sub-form") Don't have an account?
              p: a(href="/users/signup") Sign up here

    include footer.pug
