extends layout.pug
include utils.pug

append head
   link(rel='stylesheet' href='/stylesheets/add-books.css')

block content
   div(id='add-book-div')
    h1(class="form-header") Add Book
    form(action="/bookshelves/add-book" method='post')
        +field('Cover (Image URL)', 'cover', book.cover)
        +field('Title', 'title', book.title)
        +field('Author', 'author', book.author)
        +field('Published', 'published', book.published)
        div(class='submit-div')
          button(type='submit' class='btn submit') Add
          a(href='/bookshelves/add-book' class='a clear') Clear
